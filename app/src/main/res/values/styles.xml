<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionTextView">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/ttdirectors_regular</item>
        <item name="android:background">@drawable/frame_bg</item>
        <item name="android:textColor">#8b4513</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">true</item>


    </style>

    <style name="RadioButtonView">
        <item name="android:layout_margin">@dimen/margin_4</item>
        <item name="android:paddingRight">@dimen/margin_8</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:fontFamily">@font/courierprime</item>

    </style>

    <style name="RadioGroupView">
        <item name="android:layout_marginRight">@dimen/margin_8</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:background">@drawable/frame_bg</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>

    <style name="EditTextView">
        <item name="android:layout_margin">@dimen/margin_8</item>
        <item name="android:paddingTop">@dimen/margin_4</item>
        <item name="android:paddingBottom">@dimen/margin_4</item>
        <item name="android:paddingLeft">@dimen/margin_8</item>
        <item name="android:hint">@string/enter_your_name</item>
        <item name="android:background">@drawable/frame_bg</item>
        <item name="android:textSize">@dimen/editTextSize</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:fontFamily">@font/courierprime</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="HeaderView">
        <item name="android:layout_marginRight">@dimen/margin_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:fontFamily">@font/oscar</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/bgColor</item>
    </style>

    <style name="SubmitBtn">
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">@dimen/margin_24</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">@font/ttdirectors_regular</item>
        <item name="android:textColor">@color/bgColor</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>

    </style>

    <style name="SmallBtn">
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">@dimen/margin_24</item>
        <item name="android:fontFamily">@font/ttdirectors_regular</item>
        <item name="android:textColor">@color/bgColor</item>
        <item name="android:layout_margin">@dimen/margin_16</item>

    </style>

    <style name="ScoreField">
        <item name="android:layout_margin">@dimen/margin_24</item>
        <item name="android:fontFamily">@font/ttdirectors_regular</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>

